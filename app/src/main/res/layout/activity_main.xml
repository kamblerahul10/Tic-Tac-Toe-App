<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343656"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/btn4"
        android:layout_toLeftOf="@+id/btn2"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/btn5"
        android:layout_marginBottom="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/btn5"
        android:layout_toEndOf="@+id/btn2"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn5"
        android:layout_marginEnd="30dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@+id/btn5"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn8"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="25dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage8"
            android:background="#F69e78"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn8"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:background="#343e56">

        <ImageView
            android:id="@+id/buttonImage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn5"
        android:background="#F69e78"
        android:layout_marginBottom="8dp" />

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn5"
        android:background="#F69e78"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="330dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="140dp"
        android:background="#F69e78"
        android:layout_marginTop="8dp" />

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="330dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="140dp"
        android:background="#F69e78"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn8"
        android:layout_marginTop="70dp"
        android:background="@color/purple_200"
        />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp">

        <TextView
            android:id="@+id/scoreX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X :- 0"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/scoreY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score Y :- 0"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="25sp"/>


    </LinearLayout>


</RelativeLayout>